{
    "name": "SD35-m Environment",
    "image": "nvidia/cuda:12.6.3-cudnn-devel-ubuntu24.04",
    
    "runArgs": [
        "--gpus",
        "all"
    ],

    "hostRequirements": {
        "gpu": "optional"
    },

    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "nvidia.nsight-vscode-edition"
            ]
        }
    },

    "initializeCommand": "mkdir -p ${localWorkspaceFolder}/.docker-cache",

    "mounts": [
        "source=${localWorkspaceFolder}/.docker-cache,target=/root/.cache,type=bind"
    ],

    "onCreateCommand": [
        "apt-get update",
        "DEBIAN_FRONTEND=noninteractive apt-get install -y python3-pip python3-venv git wget build-essential",
        "rm -rf /var/lib/apt/lists/*"
    ],
    
    "postCreateCommand": [
        "python3 -m venv /workspace/venv",
        ". /workspace/venv/bin/activate",
        "pip install --no-cache-dir -r requirements.txt"
    ],

    "remoteEnv": {
        "NVIDIA_VISIBLE_DEVICES": "all",
        "CUDA_VISIBLE_DEVICES": "0",
        "NVIDIA_DRIVER_CAPABILITIES": "compute,utility",
        "LD_LIBRARY_PATH": "/usr/local/nvidia/lib:/usr/local/nvidia/lib64",
        "PATH": "/workspace/venv/bin:/usr/local/nvidia/bin:/usr/local/cuda/bin:${PATH}",
        "VIRTUAL_ENV": "/workspace/venv",
        "PYTHONPATH": "/workspace"
    }
}
