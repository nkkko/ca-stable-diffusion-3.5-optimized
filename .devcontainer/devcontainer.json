{
    "name": "SD35-m Environment",
    "image": "nvidia/cuda:12.6.3-cudnn-devel-ubi8",
    
    "runArgs": [
        "--gpus",
        "all"
    ],

    "hostRequirements": {
        "gpu": "optional"
    },

    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "nvidia.nsight-vscode-edition"
            ]
        }
    },

    "initializeCommand": "mkdir -p ${localWorkspaceFolder}/.docker-cache",

    "mounts": [
        "source=${localWorkspaceFolder}/.docker-cache,target=/root/.cache,type=bind"
    ],

    "onCreateCommand": [
        "dnf install -y python3-pip git wget make gcc gcc-c++ && dnf clean all"
    ],
    
    "postCreateCommand": "pip install -r requirements.txt",

    "remoteEnv": {
        "NVIDIA_VISIBLE_DEVICES": "all",
        "CUDA_VISIBLE_DEVICES": "0",
        "NVIDIA_DRIVER_CAPABILITIES": "compute,utility",
        "LD_LIBRARY_PATH": "/usr/local/nvidia/lib:/usr/local/nvidia/lib64",
        "PATH": "/usr/local/nvidia/bin:/usr/local/cuda/bin:${PATH}"
    }
}